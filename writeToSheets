import os.path
from google.auth.transport.requests import Request
from google.oauth2.credentials import Credentials
from google_auth_oauthlib.flow import InstalledAppFlow
from googleapiclient.discovery import build
from googleapiclient.errors import HttpError
import json

# If modifying these scopes, delete the file token.json.
SCOPES = ["https://www.googleapis.com/auth/spreadsheets"]

# The ID and range of a sample spreadsheet.
SAMPLE_SPREADSHEET_ID = "1qbPA7kNlV1fn8ndyJShn5uJuYU-bAlA10sGE1sP8pKY"
SAMPLE_RANGE_NAME = "Blad3!B2:J"


def main():
    """Writes JSON data to a specific range in a Google Sheets spreadsheet."""
    creds = None
    if os.path.exists("token.json"):
        creds = Credentials.from_authorized_user_file("token.json", SCOPES)
    if not creds or not creds.valid:
        if creds and creds.expired and creds.refresh_token:
            creds.refresh(Request())
        else:
            flow = InstalledAppFlow.from_client_secrets_file(
                "client_secret_348806479748-q02gddrlmj90dgj1397iq546831imo4s.apps.googleusercontent.com.json",
                SCOPES,
            )
            creds = flow.run_local_server(port=0)
        with open("token.json", "w") as token:
            token.write(creds.to_json())

    try:
        service = build("sheets", "v4", credentials=creds)

        # Prepare the JSON data you want to write
        with open("events.json") as f:
            json_data = json.load(f)

        # Convert the JSON data to a list of lists (rows)
        rows = []
        for event in json_data:
            row = [event.get(key, "") for key in ["title", "nation", "link", "image_url", "date", "time", "location", "frequency"]]
            rows.append(row)

        # Call the Sheets API to update the spreadsheet
        request = service.spreadsheets().values().update(
            spreadsheetId=SAMPLE_SPREADSHEET_ID,
            range=SAMPLE_RANGE_NAME,
            valueInputOption="USER_ENTERED",
            body={"values": rows},
        )
        response = request.execute()

        print("JSON data has been successfully written to Google Sheets.")

    except HttpError as err:
        print(err)


if __name__ == "__main__":
    main()
